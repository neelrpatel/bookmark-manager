<div class="col mb-4">
  <div class="card h-100 text-center">
    <div class="card-header">
      <h5>
        <% if (folder.isPinned) { %>
          <i class="fas fa-thumbtack fa-xs text-gold float-left"></i>
        <% } %>
          <i class="fas fa-folder fa-lg text-manilla"></i>
      </h5>
    </div>

    <div class="card-body d-flex flex-column">
      <h4 class="card-title"><%= folder.name %></h4>
      <p class="card-text mt-auto"><small class="text-muted">Updated <%= formatDate(folder.updatedAt) %></small></p>
    </div>
    
    <div class="card-footer">
      <a href="/folders/<%= folder.id %>" class="card-btn btn btn-primary float-left"
        data-toggle="tooltip" title="Open folder">
        <i class="fas fa-folder-open fa-lg"></i>
      </a>
      <a href="/folders/<%= folder.id %>/edit" class="card-btn btn btn-warning" data-toggle="tooltip"
        title="Edit folder">
        <i class="fas fa-edit fa-lg"></i>
      </a>
      <form action="/folders/<%= folder.id  %>" method="POST" class="card-btn float-right">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Delete folder">
          <i class="fas fa-trash-alt fa-lg"></i>
        </button>
      </form>
    </div>
  </div>
</div>