<div class="form-group row">
  <label for="name" class="col-sm-2 col-form-label">Name</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" id="name" name="name" value="<%= bookmark.name %>" minlength="1"
      maxlength="100" required>
    <div class="invalid-feedback">
      Please provide a bookmark name.
    </div>
  </div>
</div>

<div class="form-group row">
  <label for="url" class="col-sm-2 col-form-label">URL</label>
  <div class="col-sm-10">
    <input type="url" class="form-control" id="url" name="url" value="<%= bookmark.url %>"
      pattern="^(?:(?:https?|ftp):\/\/)?(?:(?!(?:10|127)(?:\.\d{1,3}){3})(?!(?:169\.254|192\.168)(?:\.\d{1,3}){2})(?!172\.(?:1[6-9]|2\d|3[0-1])(?:\.\d{1,3}){2})(?:[1-9]\d?|1\d\d|2[01]\d|22[0-3])(?:\.(?:1?\d{1,2}|2[0-4]\d|25[0-5])){2}(?:\.(?:[1-9]\d?|1\d\d|2[0-4]\d|25[0-4]))|(?:(?:[a-z\u00a1-\uffff0-9]-*)*[a-z\u00a1-\uffff0-9]+)(?:\.(?:[a-z\u00a1-\uffff0-9]-*)*[a-z\u00a1-\uffff0-9]+)*(?:\.(?:[a-z\u00a1-\uffff]{2,})))(?::\d{2,5})?(?:\/\S*)?$"
      required>
    <div class="invalid-feedback">
      Please provide a bookmark URL.
    </div>
  </div>
</div>

<div class="form-group row">
  <label for="folder" class="col-sm-2 col-form-label">Folder</label>
  <div class="col-sm-10">
    <select class="form-control" id="folder" name="folder">
      <% if (operation === 'Add' || !bookmark.folder) { %>
        <option selected value="">None</option>
      <% } else { %>
        <option value="">None</option>
      <% } %>

      <option disabled>---</option>

      <% folders.forEach(folder => { %>
        <% if (folder.id == bookmark.folder) { %>
          <option selected value="<%= folder.id %>"><%= folder.name %></option>
        <% } else { %>
          <option value="<%= folder.id %>"><%= folder.name %></option>
        <% } %>
      <% }) %>
    </select>
  </div>
</div>

<fieldset class="form-group">
  <div class="row">
    <legend class="col-form-label col-sm-2 pt-0">Pin</legend>
    <div class="col-sm-10">
      <div class="form-check form-check-inline">
        <input type="radio" class="form-check-input" id="pin" name="isPinned" value="1"
          <%= bookmark.isPinned ? 'checked' : '' %>>
        <label for="pin" class="form-check-label">Yes</label>
      </div>
      <div class="form-check form-check-inline">
        <input type="radio" class="form-check-input" id="doNotPin" name="isPinned" value=""
          <%= bookmark.isPinned ? '' : 'checked' %>>
        <label for="doNotPin" class="form-check-label">No</label>
      </div>
    </div>
  </div>
</fieldset>