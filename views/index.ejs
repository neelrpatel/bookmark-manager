<div class="container card-container">
  <div class="row">
    <div class="carousel-header-mobile col-12">
      <h2><i class="fas fa-history fa-xs"></i> &nbsp; Recently Updated</h2>
    </div>
    <div class="carousel-header-desktop <%= recentlyUpdatedItems.length > 4 ? 'col-8' : 'col-12' %>">
      <h2 class="mb-3"><i class="fas fa-history fa-xs"></i> &nbsp; Recently Updated</h2>
    </div>
    <% if (recentlyUpdatedItems.length > 0) { %>
      <% if (recentlyUpdatedItems.length > 4) { %>
        <div class="carousel-btns-mobile col-12 text-center">
          <%- include('./partials/_carousel_buttons') %>
        </div>
        <div class="carousel-btns-desktop col-4 text-right">
          <%- include('./partials/_carousel_buttons') %>
        </div>
      <% } %>
      <div class="col-12">
        <div id="recentlyUpdatedCarousel" class="carousel slide" data-interval="false">
          <div class="carousel-inner">
            <%- include('./partials/_carousel_item', { begin: 0 }) %>
            <%- include('./partials/_carousel_item', { begin: 4 }) %>
            <%- include('./partials/_carousel_item', { begin: 8 }) %>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="col-12">
        <h4>You haven't created any bookmarks or folders yet!</h4>
      </div>
    <% } %>
  </div>

  <hr class="pb-1">

  <h2 class="mb-3"><i class="fas fa-thumbtack fa-xs text-gold"></i> &nbsp; Pinned</h2>
  <% if (pinnedItems.length > 0) { %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
      <% pinnedItems.forEach(item => { %>
        <% if (item.url) { %>
          <%- include('./partials/_bookmark_card', { bookmark: item }) %>
        <% } else { %>
          <%- include('./partials/_folder_card', { folder: item }) %>
        <% } %>
      <% }) %>
    </div>
  <% } else { %>
    <h4>You haven't pinned any bookmarks or folders yet!</h4>
  <% } %>
</div>